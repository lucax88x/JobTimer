@using System.Web.Optimization
@{
    Layout = Request.QueryString["SPA"] == "1" ? null : "~/Views/Master/Master.cshtml";
}

@Styles.Render("~/css/timer")

<div hidden style="display: none;" locker="lock">
    <div class="row top25">

        <div class="form-group col-sm-12 col-md-12 col-xs-12 center">
            <big-button id="btn-enter" data-style="rotate-angle-top" data-perspective data-horizontal ng-disabled="enterDisabled" ng-click="saveEnter()" on-finish="enter-finished"><span class="hidden-xs hidden-sm">Enter</span> <i class="fa fa-sign-in"></i> <span class="time-span" ng-hide="enterDisabled" ng-bind="time"></span></big-button>
        </div>
        <div class="form-group col-sm-12 col-md-12 col-xs-12">
            <div class="center-flex">
                <div class="col-sm-4 col-md-4 col-xs-4 no-padding-left">
                    <big-button id="btn-enter-lunch" data-style="rotate-angle-left" data-perspective ng-disabled="enterLunchDisabled" ng-click="saveEnterLunch()" on-finish="enter-lunch-finished"><span class="hidden-xs hidden-sm">Lunch</span> <i class="fa fa-sign-in"></i> <span class="time-span" ng-hide="enterLunchDisabled" ng-bind="time"></span></big-button>
                </div>
                <div class="col-sm-4 col-md-4 col-xs-4 no-padding">
                    <date-picker id="true-date-picker" ng-model="date" date-picker-open-channel="openTrueDatePicker"></date-picker>                    
                    <button id="date-picker" class='progress-button btn-block' ng-click="openDate()"><span ng-bind="date | date : 'EEE dd MMM'"></span>&nbsp;<i class="fa fa-calendar hidden-xxs"></i></button>
                </div>
                <div class="col-sm-4 col-md-4 col-xs-4 no-padding-right">
                    <big-button id="btn-exit-lunch" data-style="rotate-angle-right" data-perspective ng-disabled="exitLunchDisabled" ng-click="saveExitLunch()" on-finish="exit-lunch-finished"><span class="hidden-xs hidden-sm">Lunch</span> <i class="fa fa-sign-out"></i> <span class="time-span" ng-hide="exitLunchDisabled" ng-bind="time"></span></big-button>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="form-group col-sm-12 col-md-12 col-xs-12 center">
            <big-button id="btn-exit" data-style="rotate-angle-bottom" data-perspective ng-disabled="exitDisabled" ng-click="saveExit()" on-finish="exit-finished"><span class="hidden-xs hidden-sm">Exit</span> <i class="fa fa-sign-out"></i> <span class="time-span" ng-hide="exitDisabled" ng-bind="time"></span></big-button>
        </div>
    </div>
    <div class="row top25">
        <div class="form-group col-sm-12 col-md-12 center">
            <slider id="hour-slider" slider-model="offset"></slider>
        </div>
    </div>
</div>
